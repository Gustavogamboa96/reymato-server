{
  "name": "rey-mato-server",
  "version": "1.0.0",
  "description": "Rey Mato multiplayer game server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
